{
  "version": "2.0.0",
  "tasks": [
    {
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "label": "npm install",
      "type": "process",
      "runOptions": {
        "runOn": "folderOpen",
      },
      "command": "meteor",
      "args": ["npm", "install"],
    },
    {
      "label": "userland build",
      "type": "shell",
      "command": "echo ./imports/userland/iframe-entrypoint.ts | entr ./imports/userland/build.fish",
      "isBackground": true,
      // "dependsOn": [
      //   "npm install"
      // ],
      "problemMatcher": [
        "$tsc-watch"
      ],
    },
    {
      "label": "app server",
      "type": "process",
      "command": "meteor",
      "args": ["--settings", "settings.json"],
      "isBackground": true,
      "dependsOn": [
        "npm install"
      ],
      "options": {
        "env": {
          "ROOT_URL": "https://d64f80e0-432a-4e70-a740-d7ad8c1fc1cc.pub.instances.scw.cloud"
        }
      },
      "problemMatcher": [
        "$tsc-watch"
      ],
    }
  ]
}
